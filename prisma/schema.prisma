
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id
  username String @unique
  email String @unique
  password String
  status UserStatus
  blockedUsers BlackList[] @relation("blackLister")
  blackListedBy BlackList[] @relation("blackListee")
  sentMessages Message[] @relation("message_sender")
  receivedMessages Message[] @relation("message_receiver")
}

model BlackList {
  id Int @id
  blackListerId Int
  blackLister User @relation("blackLister", fields: [blackListerId], references: [id])
  blackListeeId Int
  blackListee User @relation("blackListee", fields: [blackListeeId], references: [id])
}

model Message {
  id            Int   @id
  text          String
  createdAt     DateTime  @default(now())
  senderId      Int
  sender        User      @relation(name: "message_sender", fields: [senderId], references: [id])
  receiverId    Int
  receiver      User      @relation(name: "message_receiver", fields: [receiverId], references: [id])
}



enum UserStatus {
  ONLINE
  OFFLINE
}



